<resources>
    <!-- Base application theme. -->
    <style name="Theme.TvSeriesSimpleApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_bg</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextStyles -->
    <style name="text_20_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- General Styling -->

    <style name="SimpleRecycler">
        <item name="android:orientation">vertical</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

</resources>